{
    "name": "equed/equed-lms",
    "description": "EquEdEU LMS - LMS for Equine Education Europe",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "version": "1.0.0",
    "authors": [
      {
        "name": "Equine Education Europe",
        "email": "info@equed.eu",
        "homepage": "https://equed.eu"
      }
    ],
    "require": {
      "php": "^8.2",
      "typo3/cms-core": "^13.4",
      "typo3/cms-extbase": "^13.4",
      "typo3/cms-fluid": "^13.4",
      "typo3/cms-backend": "^13.4",
      "typo3/cms-frontend": "^13.4",
      "typo3/cms-rte-ckeditor": "^13.4",
      "typo3/cms-form": "^13.4",
      "typo3/cms-recordlist": "^13.4",
      "symfony/http-client": "^6.4",               // Für API-Calls (z. B. GPT, Dropshipping)
      "guzzlehttp/guzzle": "^7.8",                 // Alternative für HTTP-Requests
      "ramsey/uuid": "^4.7",                       // Für eindeutige Zertifikats-IDs, Tracking
      "symfony/serializer": "^6.4",                // Für API/JSON-Handling
      "symfony/validator": "^6.4",                 // Für Validierungslogik
      "symfony/translation": "^6.4",               // Für eigene Übersetzungsprozesse
      "league/flysystem": "^3.0",                  // Für File-Handling, z. B. Uploads
      "phpoffice/phpspreadsheet": "^1.29",         // Für Exporte/Importe, z. B. Prüfberichte oder QMS-Auswertung
      "doctrine/dbal": "^3.7",                     // Für komplexere Abfragen und Migrationslogik
      "ext-json": "*",
      "stripe/stripe-php": "^11.0",
      "openai-php/client": "^0.7",
      "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
      "typo3/coding-standards": "^0.7",
      "phpstan/phpstan": "^1.11",
      "phpunit/phpunit": "^10.5",
      "squizlabs/php_codesniffer": "^3.7",
      "friendsofphp/php-cs-fixer": "^3.50"
    },
    "autoload": {
      "psr-4": {
        "Equed\\EquedLms\\": "Classes/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Equed\\EquedLms\\Tests\\": "Tests/"
      }
    },
    "extra": {
      "typo3/cms": {
        "extension-key": "equed_lms"
      }
    },
    "scripts": {
      "cs": "php-cs-fixer fix --config=.php-cs-fixer.php",
      "lint": "php -l Classes/**/*.php",
      "phpstan": "phpstan analyse Classes --level=max",
      "test": "phpunit --colors=always"
    },
    "config": {
      "optimize-autoloader": true,
      "sort-packages": true,
      "preferred-install": "dist",
      "allow-plugins": {
        "typo3/class-alias-loader": true
      }
    }
  }  